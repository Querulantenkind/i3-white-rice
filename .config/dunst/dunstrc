# Dunst configuration for Snow White i3 Rice
# Pure white background with black text, matching the minimalist aesthetic

[global]
    # Display settings
    monitor = 0
    follow = mouse
    
    # Geometry
    width = 350
    height = 150
    origin = top-right
    offset = 10x40
    
    # Progress bar
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # Appearance
    transparency = 0
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 12
    frame_width = 2
    frame_color = "#000000"
    gap_size = 4
    separator_height = 2
    separator_color = frame
    corner_radius = 8
    
    # Sort and behavior
    sort = yes
    idle_threshold = 120
    
    # Font and text
    font = GohuFont 12
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    
    # Icon settings
    icon_position = left
    min_icon_size = 32
    max_icon_size = 32
    icon_path = /usr/share/icons/Papirus-Light/32x32/status/:/usr/share/icons/Papirus-Light/32x32/devices/:/usr/share/icons/Papirus-Light/32x32/apps/:/usr/share/icons/Adwaita/32x32/status/:/usr/share/icons/Adwaita/32x32/devices/:/usr/share/icons/Adwaita/32x32/legacy/
    
    # History
    show_age_threshold = 60
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#ffffff"
    foreground = "#000000"
    frame_color = "#666666"
    timeout = 2

[urgency_normal]
    background = "#ffffff"
    foreground = "#000000"
    frame_color = "#000000"
    timeout = 4

[urgency_critical]
    background = "#ffffff"
    foreground = "#000000"
    frame_color = "#FF0000"
    timeout = 0
